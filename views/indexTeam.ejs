<% include partials/headerTeam.ejs %>
    <div class="table-wrapper">
        <% if (teams.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>                       
                        <th scope="col">Team Name</th>                       
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% teams.forEach((team, index) => { %>
                        <tr>
                            <th scope="row"><%= index+1 %></th>
                            <td><%= team.name %></td>                            
                            <td>
                                <a href="/team/player/<%= team.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">See Player</a>
                                <a href="/team/addPlayer/<%= team.id %>" rel="noopener" class="btn btn-sm btn-success">Add Player</a>
                                <a href="/team/edit/<%= team.id %>"  rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/team/delete/<%= team.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No teams found.</p>
        <% } %>
    </div>
</div>
</body>
</html>